<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/shape_border"
        android:gravity="center"
        android:height="52dp"
        android:width="158dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke android:color="@android:color/darker_gray" android:width="2dp" />
        </shape>
    </item>
    <item android:id="@+id/shape_radio_ripple"
        android:height="34dp"
        android:width="140dp"
        android:gravity="center">
        <ripple xmlns:android="http://schemas.android.com/apk/res/android"
            android:color="@color/primary">
            <item android:id="@+id/ripple_mask"
                android:drawable="@drawable/ripple_mask"/>
        </ripple>
    </item>
    <item android:id="@+id/shape_radio_hover"
        android:height="34dp"
        android:width="140dp"
        android:gravity="center">
        <inset android:drawable="@drawable/shape_radio_hover" />
    </item>
</layer-list>